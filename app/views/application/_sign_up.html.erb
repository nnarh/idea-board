<div class="form">
  <h2>Sign Up<h2>
    <%= form_for user do |form| %>

      <%= render "errors", object: user %>

  <div>
    <%= form.label :username %>
    <%= form.text_field :username %>
  </div>
  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>
  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>
  <div>
    <%= form.submit "Sign up", :class => "btn" %>
  </div>
<% end %>
</div>
