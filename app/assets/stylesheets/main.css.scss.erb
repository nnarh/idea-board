* {
  box-sizing: border-box;
}

html, body {
  margin: 0;
  padding: 0;
}

body {
  background: url(<%= asset_path "gray.png" %>) repeat;
}

.video {
  position: relative;
  z-index: 2;
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  opacity: 0.7;
}

.home-content {
  position: relative;
  z-index: 3;
  color: white;
  font-family: "Circular","Helvetica Neue",Helvetica,Arial,sans-serif;
  h2 {
    font-size: 40px;
    font-weight: bold;
    color: white;
  }
}

.navigation {
  background: black;
  height: 50px;
  position: relative;
  z-index: 3;
}

.navigation {
  ul {
    list-style: none;
    margin: 0;
    padding: 0;

    li {
      float: left;
      margin: 5px;
      padding: 5px;
      a {
        color: white;
      }
    }
  }
}

.nav-search {
  margin-top: 6px;
  text-align: right;

  input {
    display: inline-block;
    max-width: 50%;
    top: -3px;
    position: relative;
  }
  .button {
    height: 39px;
    padding: 10px 30px;
  }
}

footer {
  background: black;
  height: 50px;
  position: relative;
  z-index: 3
}

.wrap {
  position:relative;
  margin:0 auto;
  width:900px;
}

#footer {
  position:fixed;
  bottom:0;
  z-index:999999;
  background: black;
  height: 50px;
  width: 100%;
}

.container {
  ul {
    list-style: none;
    margin: 0;
    padding: 0;

    li a {
      float: left;
      margin: 5px;
      padding: 5px;
      color: #ccc;
    }
    li span {
      float: left;
      margin: 5px;
      padding: 5px;
      color: #ccc;
    }
  }
}
